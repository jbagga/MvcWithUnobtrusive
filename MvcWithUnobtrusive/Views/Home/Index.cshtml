@model MvcWithUnobtrusive.ViewModels.CreatePerson

@{
    ViewBag.Title = "Test";
}


<div class="panel panel-primary" style="margin-top: 25px;">

    <div class="panel-heading">Create person</div>

    <div class="panel-body">

        @using (Html.BeginForm("Test", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Age, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Age, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.Age)
                </div>
            </div>

            
            <div class="form-group">
                <div class="col-sm-offset-6 col-sm-6">
                    <button type="submit" class="btn btn-default">Create</button>
                </div>
            </div>
        }

    </div>
</div>

